{
  "name": "solana-nft-metaplex",
  "version": "1.0.0",
  "description": "Solana NFT creation and management using Metaplex Token Metadata",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npx tsx api/server.ts",
    "start": "NODE_ENV=production npx tsx api/server.ts",
    "db:sync": "DB_SYNC=true npx tsx api/server.ts",
    "db:reset": "DB_SYNC=true DB_FORCE_SYNC=true npx tsx api/server.ts",
    "create:collection": "npx tsx src/scripts/create-collection.ts",
    "create:nft": "npx tsx src/scripts/create-nft.ts",
    "verify:nft": "npx tsx src/scripts/verify-nft.ts",
    "update:nft": "npx tsx src/scripts/update-nft.ts",
    "fractionalize:nft": "npx tsx src/scripts/fractionalize-nft.ts",
    "fractionalize:simple": "npx tsx src/scripts/fractionalize-nft-simple.ts",
    "distribute:shares": "npx tsx src/scripts/distribute-shares.ts",
    "distribute:program": "npx tsx src/scripts/distribute-shares-programmatic.ts",
    "product:batch": "npx tsx src/scripts/create-batch-collection.ts",
    "product:create": "npx tsx src/scripts/create-product-nft.ts",
    "product:create-batch": "npx tsx src/scripts/create-products-batch.ts",
    "product:verify": "npx tsx src/scripts/verify-product.ts"
  },
  "keywords": [
    "solana",
    "nft",
    "metaplex",
    "blockchain",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@metaplex-foundation/mpl-token-metadata": "^3.2.1",
    "@metaplex-foundation/umi": "^0.9.2",
    "@metaplex-foundation/umi-bundle-defaults": "^0.9.2",
    "@metaplex-foundation/umi-uploader-irys": "^0.9.2",
    "@solana-developers/helpers": "^2.5.5",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.95.8",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/node": "^22.10.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "esrun": "^3.2.26",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  }
}